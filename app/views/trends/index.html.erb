<style>
  #city-cover-photo {
    background: url(<%= @city.image %>);
    background-size: cover;
    height: 600px;
    width: 100%;
  }
  #city-name {
    font-family: 'Open Sans', sans-serif;
    font-size: 175px;
    text-align: center;
    vertical-align: middle;
    line-height: 600px;
    color: #fff;
  }
</style>
<div id="city-cover-photo">
  <div class="text-center">
    <p id="city-name"><%= @city.name %></p>
  </div>
</div>


<div class="text-center">
  <% @trend_names.each do |tn| %>
    <span>
      <p>#<%= tn %></p>  
    </span>
  <% end %>
</div>

<% @images.each do |img| %>
  <div id="image-section">
    <div class="row">
      <div class="text-center">
        <a href="<%= img['link'] %>" target="_blank">
          <%= image_tag img['images']['standard_resolution']['url'] %>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="text-center">
        <h3><%= img['user']['username'] %></h3>
        <% if img['caption']['text'] %>
          <p id="image-caption"><%= img['caption']['text'] %></p>
        <% end %>
      </div>  
    </div>
    
    <!-- only shows like buttons if user is logged in -->
      <div class="row" id="like-buttons">
        <div class="col-md-4">
          <% if current_user %>
            <div class="text-center">
              <a href="/media_like/<%= img['id'] %>?woeid=<%= params[:woeid] %>"><i class="fa fa-thumbs-up thumbs-up"></i></a>
            </div>
          <% end %>
        </div>
        <div class="col-md-4">
          <div class="text-center" id="likes-count">
            <% if img['likes']['count'] == 1 %>
              <p><%= img['likes']['count'] %> Like</p>
            <% else %>
              <p><%= img['likes']['count'] %> Likes</p>
            <% end %>
          </div>
        </div>
        <div class="col-md-4">
          <% if current_user %>
            <div class="text-center">
              <a href="/media_unlike/<%= img['id'] %>?woeid=<%= params[:woeid] %>"><i class="fa fa-thumbs-down thumbs-down"></i></a>
            </div>
          <% end %>
        </div>
      </div>
  </div>
<% end %>

