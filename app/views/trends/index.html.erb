<div class="container" style="height: 25%">
  <img src="<%= @city.image %>" id="city-image" />
</div>

<div class="text-center">
  <h1><%= @city.name %></h1>
</div>

<div class="text-center">
  <% @trend_names.each do |tn| %>
    <span>
      <p>#<%= tn %></p>  
    </span>
  <% end %>
</div>

<% @images.each do |img| %>
    <div class="row">
      <div class="text-center">
        <a href="<%= img['link'] %>" target="_blank">
          <%= image_tag img['images']['standard_resolution']['url'] %>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="text-center">
        <h3><%= img['user']['username'] %></h3>
        <%= img['caption']['text'] %>
      </div>  
    </div>
<% end %>
