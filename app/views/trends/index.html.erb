<style>
  #city-cover-photo {
    background: url(<%= @city.image %>) 50% 0 fixed;
    background-size: cover;
    background-attachment: scroll;
    height: 600px;
    width: 100%;
  }
  #city-name {
    font-family: 'Open Sans', sans-serif;
    font-size: 11vw;
    text-align: center;
    vertical-align: middle;
    line-height: 600px;
    color: #fff;
  }
</style>
<section id="city-cover-photo" data-type="background" data-speed="2">
  <div class="text-center">
    <p id="city-name"><%= @city.name %></p>
  </div>
</section>

<% @trend_image_hash.each do |trend, img| %>
  <div class="image-section">
    <div class="trend-title">
      <div class="row">
        <div class="text-center">
          <p>#<%= trend %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <a href="<%= img['link'] %>" target="_blank">
          <%= image_tag img['images']['standard_resolution']['url'], class: "ig-image" %>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="text-center">
        <h3><%= img['user']['username'] %></h3>
        <% if img['caption'] && img['caption']['text'] %>
          <p id="image-caption"><%= img['caption']['text'] %></p>
        <% end %>
      </div>  
    </div>
    
    <!-- only shows like buttons if user is logged in -->
      <div class="row" id="like-buttons">
        <div class="text-center">
          <% if current_user %>
            <div class="text-center">
              <a href="/media_like/<%= img['id'] %>?woeid=<%= params[:woeid] %>"><i class="fa fa-heart heart"></i></a>
            </div>
          <% end %>
        </div>
      </div>
  </div>
<% end %>

<!-- scroll to the top button -->
<a href="#" class="scrollToTop"><img src="http://2.bp.blogspot.com/-JsMVZzUUuvY/U0_msY6xOcI/AAAAAAAAA5k/KK01sFbi7_0/s1600/up-arrow-icon1.png"></a>
